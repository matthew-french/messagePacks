div(class='mimicbot_default_body')
  div(class='mimicbot_default_container')
    p(id='message' class='mimicbot_default_message mimicbot_default_bubble #{language}') #{message}
  div(class='mimicbot_default_outer')
    div(class='mimicbot_default_inner')
      div(class='circlify mimicbot_default_image u_' + sourceSubscriberId)
link(rel='stylesheet', href=css)
style(type="text/css").
  .mimicbot_default_image.u_#{sourceSubscriberId} {
    position: absolute;
    right: 0;
    bottom: 0;
    background:url(#{avatar}), url(#{defaultAvatar}) no-repeat;
    background-size: 120px 120px;
    width: 120px;
    height: 120px;
    background-color: green;
  }
  .mimicbot_default_body {
    background: url(#{background});
  }
