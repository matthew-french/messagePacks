div(class='mimicbot-mp-mosaic')
  div(class='mimicbot-mp-mosaic__bubble')
    blockquote(class='mimicbot-mp-mosaic__bubble__triangle-isosceles mimicbot-mp-mosaic__bubble__triangle-isosceles--right')
      p(class='language_' + language) #{message}
  div(class='mimicbot-mp-mosaic__mimicbot_avatar')
    div(class='mimicbot-mp-mosaic__mimicbot_avatar__avatar u_' + uniqueId)
link(rel='stylesheet', href=css)
style(type='text/css').
  .u_#{uniqueId} {
    background-image: url(#{avatar}), url(#{noAvatar});
  }
