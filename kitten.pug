div(class='mimicbot_kitten_body')
  div(class='mimicbot_kitten_container')
    p(id='message' class='mimicbot_kitten_message mimicbot_kitten_bubble #{language}') #{message}
  div(class='mimicbot_kitten_outer')
    div(class='mimicbot_kitten_inner')
      div(class='circlify mimicbot_kitten_image u_' + uniqueId)
link(rel='stylesheet', href=css)
style(type="text/css").
  .mimicbot_kitten_image.u_#{uniqueId} {
    position: absolute;
    right: 0;
    bottom: 0;
    background-image: url(#{avatar}), url(#{noAvatar});
    background-repeat: no-repeat;
    background-size: 120px 120px;
    width: 120px;
    height: 120px;
  }
  .mimicbot_kitten_body {
    background: url(https://s3-eu-west-1.amazonaws.com/bots-palringo-com/bots/mimic_bot/kitten/kitten.gif);
  }
